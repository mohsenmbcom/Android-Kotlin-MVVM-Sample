<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>

		<item name="android:windowBackground">@color/backgroundColor</item>

		<item name="android:fontFamily">@font/regular_font</item>
		<item name="fontFamily">@font/regular_font</item>

		<item name="android:toolbarStyle">@style/AppTheme.ToolbarStyle</item>
		<item name="toolbarStyle">@style/AppTheme.ToolbarStyle</item>
	</style>

	<style name="AppTheme.ToolbarStyle" parent="Widget.AppCompat.Toolbar">
		<item name="android:fontFamily">@font/title_font</item>
		<item name="fontFamily">@font/title_font</item>
	</style>

</resources>
